<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

        <include
            android:id="@+id/app_bar"
            layout="@layout/app_bar" />

        <TableRow
            android:id="@+id/tr_name_header"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#80CBC4">

            <TextView
                android:id="@+id/e_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:text="Name"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#444444"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/e_name_field"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:textAppearance="?android:attr/textAppearanceMedium">

                <requestFocus />
            </EditText>
        </TableRow>

        <TableRow
            android:id="@+id/tr_twitstyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80CBC4"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/e_user"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <EditText
                android:id="@+id/e_user_field"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:fontFamily="sans-serif-condensed"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </TableRow>

        <TableRow
            android:id="@+id/tr_about_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/e_about"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:text="About"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="italic" />
        </TableRow>

        <TableRow
            android:id="@+id/tr_about_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#E0F2F1"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="2dp">

            <EditText
                android:id="@+id/e_about_field"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#004D40" />
        </TableRow>

        <TableRow
            android:id="@+id/tr_status_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/e_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:text="Status"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="italic" />
        </TableRow>

        <TableRow
            android:id="@+id/tr_status_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#E0F2F1"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="2dp">

            <EditText
                android:id="@+id/e_status_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#004D40" />
        </TableRow>

        <TableRow
            android:id="@+id/tr_happy_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/e_happy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:text="Happy &apos;IT&apos; happened"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="italic" />
        </TableRow>

        <TableRow
            android:id="@+id/tr_happy_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#E0F2F1"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="2dp">

            <EditText
                android:id="@+id/e_happy_field"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#004D40" />
        </TableRow>

        <TableRow
            android:id="@+id/tr_annoy_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/e_annoy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:text="I got annoyed with:"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="italic" />
        </TableRow>

        <TableRow
            android:id="@+id/tr_annoy_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#E0F2F1"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="2dp">

            <EditText
                android:id="@+id/e_annoy_field"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="sans-serif"
                android:inputType="textMultiLine"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#004D40" />
        </TableRow>

        <TableRow
            android:id="@+id/tr_profile_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp">

            <ImageView
                android:id="@+id/e_dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_alignParentTop="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic_default_profile_pic" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp">

            <Button
                android:id="@+id/uploadImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#263238"
                android:fontFamily="sans-serif-medium"
                android:text="UPLOAD PICTURE"
                android:textColor="#ffffff"
                android:layout_alignBaseline="@+id/imageView1"
                android:onClick="chooseImage"/>

        </TableRow>

        <TableRow
            android:id="@+id/tr_confirmation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp">

            <Button
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="#263238"
                android:fontFamily="sans-serif-medium"
                android:text="CANCEL"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/save"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#263238"
                android:fontFamily="sans-serif-medium"
                android:text="SAVE"
                android:textColor="#ffffff" />

        </TableRow>

    </TableLayout>
</ScrollView>
    <fragment
        android:id="@+id/fragment_navigation_drawer"
        android:name="tud.cnlab.wifriends.profilepage.NavigationDrawerFragment"
        android:layout_width="@dimen/nav_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:layout="@layout/fragment_navigation_drawer"
        tools:layout="@layout/fragment_navigation_drawer" />

</android.support.v4.widget.DrawerLayout>