<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/app_bar"
            layout="@layout/app_bar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/profile_pic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/coverpic" />

                <TextView
                    android:id="@+id/my_name_field"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignBottom="@+id/profile_pic"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="25dp"
                    android:alpha="0.8"
                    android:background="@color/colorSecondaryText"
                    android:paddingLeft="10dp"
                    android:shadowColor="#7000"
                    android:shadowDx="12"
                    android:shadowDy="12"
                    android:shadowRadius="8"
                    android:text="Large Text"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/user_id_field"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignBottom="@+id/profile_pic"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="5dp"
                    android:alpha="0.8"
                    android:background="@color/colorSecondaryText"
                    android:paddingLeft="10dp"
                    android:shadowColor="#3000"
                    android:shadowDx="12"
                    android:shadowDy="12"
                    android:shadowRadius="8"
                    android:text="Small Text"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/status_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/profile_pic"
                    android:layout_marginTop="5dp"
                    android:alpha="0.8"
                    android:background="@color/colorPrimaryLightHelp"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="5dp"
                    android:text="Status"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/background"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/status_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/status_header"
                    android:background="@color/background"
                    android:padding="8dp"
                    android:text="@string/status_header"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/about_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/status_field"
                    android:layout_marginTop="5dp"
                    android:alpha="0.8"
                    android:background="@color/colorPrimaryLightHelp"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="5dp"
                    android:text="@string/about_header"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/background"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/about_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/about_header"
                    android:background="@color/background"
                    android:padding="8dp"
                    android:text="ABOUT"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/happy_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/about_field"
                    android:layout_marginTop="5dp"
                    android:alpha="0.8"
                    android:background="@color/colorPrimaryLightHelp"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="5dp"
                    android:text="@string/happy_header"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/background"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/happy_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/happy_header"
                    android:background="@color/background"
                    android:padding="8dp"
                    android:text="HAPPY"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/annoy_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/happy_field"
                    android:layout_marginTop="5dp"
                    android:alpha="0.8"
                    android:background="@color/colorPrimaryLightHelp"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="5dp"
                    android:text="@string/annoy_header"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/background"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/annoy_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/annoy_header"
                    android:background="@color/background"
                    android:padding="8dp"
                    android:text="ANNOY"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

            </RelativeLayout>
        </ScrollView>

    </LinearLayout>


    <fragment
        android:id="@+id/fragment_navigation_drawer"
        android:name="tud.cnlab.wifriends.profilepage.NavigationDrawerFragment"
        android:layout_width="@dimen/nav_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:layout="@layout/fragment_navigation_drawer"
        tools:layout="@layout/fragment_navigation_drawer" />

</android.support.v4.widget.DrawerLayout>